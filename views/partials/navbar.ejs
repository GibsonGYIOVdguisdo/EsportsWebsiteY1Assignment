<script>
    let windowLocation = window.location.href.split("/")[3];
    if (windowLocation === "games"){
        document.getElementById("GameSelect").classList.add("activeButton2");
    }
    else if (windowLocation === "players"){
        document.getElementById("PlayerSelect").classList.add("activeButton2");
    }
    else{
        document.getElementById("HomeSelect").classList.add("activeButton2");
    }
</script>