
<div class="container">
    <header class="d-flex justify-content-center py-3">
      <ul class="nav nav-pills">
        <li class="button2"><a href="/" id="HomeSelect" class="nav-link" aria-current="page">Home</a></li>
        <li class="button2"><a href="/games/" id="GameSelect" class="nav-link">Games</a></li>
        <li class="button2"><a href="/players/" id="PlayerSelect" class="nav-link">Players</a></li>
      </ul>
    </header>
