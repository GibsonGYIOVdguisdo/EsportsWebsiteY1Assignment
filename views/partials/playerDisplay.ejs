<a href="/players/<%=player.player_id%>" class="gameDisplay" id="player<%=player.player_id%>">
    <div class="card" style="margin-top: 20px;">
        <div class="card-header">
            <h4 style="width: 400px; overflow: hidden; height: 30px;">
                <%= player.name %>
            </h2>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
            <p style="width: 450px; overflow: hidden; height: 30px; word-wrap: break-word;"><strong>Email:</strong><%= player.email %></p>
            </blockquote>
        </div>
    </div>
</a>