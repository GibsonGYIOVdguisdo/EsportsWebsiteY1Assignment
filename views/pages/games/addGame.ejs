<%- include('../../partials/head') %>
<%- include('../../partials/navbar') %>

<div style="display: flex; justify-content: space-around;">
    <a href="/games/" id="backButton"><button class="button3">Back</button></a>
    <script>
        if (sessionStorage.getItem("lastPage") !== window.location.href){
            document.getElementById("backButton").href = sessionStorage.getItem("cameFrom");
        }
    </script>
</div>
<div class="container px-5 my-5">
    <div class="card cardCustom hiddenCard" style="margin-top: 20px;">
        <div class="card-header">
            <h1>Add a game</h1>
        </div> 
        <div class="card-body">
            <form onsubmit="return validateGameForm('addGame')" action="/games/add" method="post" name="addGame">
                <p style="margin-bottom: 3px; font-weight: 600;">Game name: <input class="form-control" name="name" type="text" /></p>
                <p id="nameStatus" style="color: red;"><br></p>
                <p style="margin-bottom: 3px;">Match duration: <input class="form-control" name="duration" type="text" /></p>    
                <p id="durationStatus" style="color: red;"><br></p>
                <p style="margin-bottom: 3px;">Team size:<input class="form-control" name="team_size" type="text" /></p>
                <p id="sizeStatus" style="color: red;"><br></p>
                <button class="button4 btn-lg" id="submitButton" type="submit">Add game</button>
            </form>
        </div>  
    </div>
</div>
<script src="/public/gameFormValidation.js"></script>
<script src="/public/loadCard.js"></script>
<%- include('../../partials/footer') %>