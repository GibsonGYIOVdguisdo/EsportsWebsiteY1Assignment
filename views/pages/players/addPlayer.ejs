<div style="display: flex; justify-content: space-around;">
    <a href="/players/" id="backButton"><button class="button3">Back</button></a>
    <script>
        if (sessionStorage.getItem("lastPage") !== window.location.href){
            document.getElementById("backButton").href = sessionStorage.getItem("cameFrom");
        }
    </script>
</div>
<div class="container px-5 my-5">
    <div class="card cardCustom hiddenCard" style="margin-top: 20px;">
        <div class="card-header">
            <h1>Add a player</h1>
        </div>  
        <div class="card-body">
            <form onsubmit="return validatePlayerForm('addPlayer')" action="/players/add" method="post" name="addPlayer" >
                <p style="margin-bottom: 3px;">Player name: <input class="form-control" name="name" type="text" /></p>
                <p id="nameStatus" style="color: red;"><br></p>
                <p style="margin-bottom: 3px;">Player email: <input class="form-control" name="email" type="text" /></p>    
                <p id="emailStatus" style="color: red;"><br></p>
                <button class="button4" id="submitButton" type="submit">Add player</button>
            </form>
        </div>  
    </div>
</div>
<script src="/public/playerFormValidation.js"></script>views/pages/games/addGame.ejs
<script src="/public/loadCard.js"></script>
