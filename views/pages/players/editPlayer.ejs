<%- include('../../partials/head') %>
<%- include('../../partials/navbar') %>
<div style="display: flex; justify-content: space-around;">
    <a href="/players/<%=playerId%>"><button class="button3">Back</button></a>
</div>
<script src="/public/playerFormValidation.js"></script>
<div class="container px-5 my-5">
    <div class="card cardCustom hiddenCard" style="margin-top: 20px;">
        <div class="card-header">
            <h1>Edit a player</h1>
        </div>
        <script>
            function saveChange(){
                sessionStorage.setItem("lastChange","edit");
            }
        </script>
        <div class="card-body"> 
            <form onsubmit="return validatePlayerForm('editPlayer')" name="editPlayer" action="/players/edit/<%=playerId%>" method="post">
                <p>Player name: <input class="form-control" name="name" type="text" value="<%=playerName%>" placeholder="<%=playerName%>"/></p>
                <p id="nameStatus" style="color: red;"><br></p>
                <p>Player email: <input class="form-control" name="email" type="text" value="<%=playerEmail%>" placeholder="<%=playerEmail%>"></p>    
                <p id="emailStatus" style="color: red;"><br></p>
                <button class="button4" id="submitButton" type="submit" onclick="saveChange()">Confirm</button>
            </form>
        </div>
    </div>
</div>
<script src="/public/loadCard.js"></script>
<%- include('../../partials/footer') %>