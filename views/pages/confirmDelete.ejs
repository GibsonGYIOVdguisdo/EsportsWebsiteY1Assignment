<%- include('../partials/head') %>
<%- include('../partials/navbar') %>


<div style="display: flex; justify-content: space-around;">
    <a href="/<%=category%>/<%=id%>"><button class="button3">Back</button></a>
</div>
<script>
    let changedData = sessionStorage.getItem("lastOpened");
    function saveChange(){
        let currentId = parseInt(localStorage.getItem("changeId")) + 1 || 0;
        console.log(currentId);
        localStorage.setItem("changeId",currentId)
        sessionStorage.setItem(`change${currentId}Data`,changedData)
        sessionStorage.setItem(`change${currentId}Action`,"delete")
    }
</script>
<div class="container" style="margin-top: 50px;">
    <div class="card cardCustom hiddenCard">
        <div class="card-header">
            <h1 style="text-align: center; margin-top: 30px;">ARE YOU SURE YOU WANT TO DELETE</h1>
            <h1 style="text-align: center;">"<%=name%>"</h1>
        </div>
        <div class="card-body">
            <div style="display: flex; justify-content: space-around;">
                <form action="/<%=category%>/delete/<%=id%>?name=<%=name%>" method="post">
                    <button class="button4" id="submitButton" type="submit" onclick="saveChange()">Confirm delete</button>
                </form>
            </div>
        </div>

    </div>
</div>
<script src="/public/loadCard.js"></script>
